{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "nationalparks",
    "annotations": {
      "iconClass": "icon-java",
      "description": "Application template NationalParks backend running on SpringBoot and using mongodb"
    }
  },
  "labels": {
    "application": "nationalparks",
    "createdBy": "nationalparks-template"
  },
  "items": [
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "nationalparks",
        "labels": {
          "component": "config"
        }
      },
      "data": {
        "db.user": "mongodb",
        "db.password": "mongodb",
        "db.name": "mongodb",
        "db.properties": "db.user=mongodb\ndb.password=mongodb\ndb.name=mongodb",
        "application.properties": "spring.data.mongodb.uri=mongodb://mongodb:mongodb@$mongodb-nationalparks:27017/mongodb"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "s2i-java"
      },
      "spec": {
        "tags": [
          {
            "name": "latest",
            "from": {
              "kind": "DockerImage",
              "name": "jorgemoralespou/s2i-java"
            }
          }
        ]
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb-nationalparks",
        "labels": {
          "component": "mongodb"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "mongo",
            "protocol": "TCP",
            "port": 27017,
            "targetPort": 27017
          }
        ],
        "selector": {
          "name": "mongodb"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb",
        "labels": {
          "component": "mongodb"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "recreateParams": {
            "timeoutSeconds": 600
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "mongodb"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "openshift",
                "name": "mongodb:3.2"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "test": false,
        "selector": {
          "name": "mongodb"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "mongodb"
            }
          },
          "spec": {
            "volumes": [
              {
                "name": "mongodb-data",
                "emptyDir": {}
              }
            ],
            "containers": [
              {
                "name": "mongodb",
                "image": "mongodb",
                "ports": [
                  {
                    "containerPort": 27017,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "KUBERNETES_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  },
                  {
                    "name": "MONGODB_USER",
                    "valueFrom": {
                      "configMapKeyRef": {
                        "name": "nationalparks",
                        "key": "db.user"
                      }
                    }
                  },
                  {
                    "name": "MONGODB_PASSWORD",
                    "valueFrom": {
                      "configMapKeyRef": {
                        "name": "nationalparks",
                        "key": "db.password"
                      }
                    }
                  },
                  {
                    "name": "MONGODB_DATABASE",
                    "valueFrom": {
                      "configMapKeyRef": {
                        "name": "nationalparks",
                        "key": "db.name"
                      }
                    }
                  },
                  {
                    "name": "MONGODB_ADMIN_PASSWORD",
                    "value": "mongodb"
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "512Mi"
                  }
                },
                "volumeMounts": [
                  {
                    "name": "mongodb-data",
                    "mountPath": "/var/lib/mongodb/data"
                  }
                ],
                "livenessProbe": {
                  "tcpSocket": {
                    "port": 27017
                  },
                  "initialDelaySeconds": 30,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "readinessProbe": {
                  "exec": {
                    "command": [
                      "/bin/sh",
                      "-i",
                      "-c",
                      "mongo 127.0.0.1:27017/mongodb -u mongodb -p mongodb --eval=\"quit()\""
                    ]
                  },
                  "initialDelaySeconds": 3,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent",
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst",
            "securityContext": {}
          }
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "nationalparks"
      },
      "spec": {
        "tags": [
          {
            "name": "latest"
          }
        ]
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "nationalparks",
        "labels": {
          "build": "nationalparks"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "GitHub",
            "github": {
              "secret": "secret101"
            }
          },
          {
            "type": "Generic",
            "generic": {
              "secret": "secret101"
            }
          },
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange"
          }
        ],
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/openshift-roadshow/nationalparks.git",
            "ref": "master"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "s2i-java:latest"
            },
            "env": [
              {
                "name": "MAVEN_ARGS",
                "value": "clean install spring-boot:repackage -DskipTests -Dcom.redhat.xpaas.repo.redhatga"
              },
              {
                "name": "MAVEN_MIRROR_URL",
                "value": ""
              }
            ],
            "incremental": false
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "nationalparks:latest"
          }
        },
        "resources": {},
        "postCommit": {}
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "nationalparks",
        "labels": {
          "component": "nationalparks"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%",
            "post": {
              "failurePolicy": "Ignore",
              "execNewPod": {
                "command": [
                  "curl",
                  "-s",
                  "http://nationalparks:8080/ws/data/load"
                ],
                "containerName": "nationalparks"
              }
            }
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "nationalparks"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "nationalparks:latest"
              }
            }
          }
        ],
        "replicas": 1,
        "test": false,
        "selector": {
          "component": "nationalparks"
        },
        "template": {
          "metadata": {
            "labels": {
              "component": "nationalparks"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "nationalparks",
                "image": "nationalparks",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "KUBERNETES_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  }
                ],
                "resources": {},
                "livenessProbe": {
                  "httpGet": {
                    "path": "/ws/healthz/",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 120,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/ws/healthz/",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 20,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst",
            "securityContext": {}
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "nationalparks",
        "labels": {
          "component": "nationalparks",
          "type": "parksmap-backend"
        },
        "annotations": {
          "service.alpha.openshift.io/dependencies": "[{\"name\":\"mongodb-nationalparks\",\"namespace\":\"\",\"kind\":\"Service\"}]"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "component": "nationalparks"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "nationalparks",
        "labels": {
          "component": "nationalparks"
        }
      },
      "spec": {
        "host": "",
        "to": {
          "kind": "Service",
          "name": "nationalparks",
          "weight": 100
        },
        "port": {
          "targetPort": "8080-tcp"
        }
      }
    }
  ]
}
